 // emp_oracle

 Name                                      Null?    Type
 ----------------------------------------- -------- ----------------------------
 EMPNO                                              NUMBER(4)
 ENAME                                              VARCHAR2(10)
 JOB                                                VARCHAR2(9)
 MGR                                                NUMBER(4)
 HIREDATE                                           DATE
 SAL                                                NUMBER(7,2)
 COMM                                               NUMBER(7,2)
 DEPTNO                                             NUMBER(2)

 // dept_oracle

 Name                                      Null?    Type
 ----------------------------------------- -------- ----------------------------
 DEPTNO                                    NOT NULL CHAR(2)
 DNAME                                              VARCHAR2(20)

// 1
SELECT dept.deptno, ROUND(AVG(emp.sal),2) 
from emp_oracle emp, dept_oracle dept
where emp.deptno = dept.deptno
GROUP BY dept.deptno;

// 2
SELECT dept.dname, AVG(emp.sal)
from emp_oracle emp, dept_oracle dept
where emp.deptno = dept.deptno
GROUP BY dept.dname
HAVING COUNT(emp.deptno) > 5;

// 3
SELECT ename, sal, job
from emp_oracle
where sal > (SELECT AVG(sal) FROM emp_oracle);

// 4
SELECT emp.ename, emp.sal
from emp_oracle emp, dept_oracle dept
where dept.dname <> 'Accounting';

// 5
SELECT ename, sal, deptno
from emp_oracle
where (deptno,sal) in (select deptno, MIN(sal) 
								 from emp_oracle
								 GROUP BY deptno);


